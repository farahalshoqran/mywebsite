@model Diagnostic_Learning_Difficulties_Part2.Models.SignupUserModel

@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h2 class="h3style">Sign Up</h2>


<hr style="background-color: #aeaeae "  />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SignUp" asp-controller="Account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
               
                <input asp-for="FullName" class="form-control"  placeholder="Fullname"/>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input asp-for="Email" class="form-control "  placeholder="Email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
               
                <input asp-for="Password" class="form-control"  placeholder="Password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
               
                <input asp-for="confirmPassword" class="form-control" placeholder="Confirm Password" />
                <span asp-validation-for="confirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="_Birthday.Date" class="control-label text-white"> Birthday</label>
                <input asp-for="_Birthday.Date" class="form-control" type ="date" />
                <span asp-validation-for="_Birthday.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
               <label class="text-white">Gender</label>
                <span class=" text-white" style="padding-left: 15px">
                    <input type="radio" title="Gender" value="Female" name="gender" />
                    <label asp-for="Gender"> Female</label>
                </span>
                <p class=" text-white" style="padding-left: 70px">
                    <input type="radio" title="Gender" value="Male" name="gender" />
                    <label asp-for="Gender"> Male</label>
                </p>
                   
                
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-sm-6 " >
       
        <img src="~/image/pic.png" class="img-fluid" />
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

